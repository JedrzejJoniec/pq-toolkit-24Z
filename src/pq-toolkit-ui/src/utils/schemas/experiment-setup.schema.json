{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Experiment setup",
  "description": "Configuration for PQ Toolkit experiment",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "testType": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "testType"
        ]
      },
      "minItems": 1
    }
  },
  "required": [
    "name",
    "title",
    "tests"
  ]
}